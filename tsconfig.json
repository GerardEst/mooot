{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom",
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
